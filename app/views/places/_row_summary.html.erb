<% place = row_summary-%>
<tr class="place<%= (place.user == current_user) ? " mine" : "" %>">
  <td class="user"><%= place.user.username %></td>
  <td class="name"><%= link_to place.name, place%></td>
  <td class="address"><%= link_to place.address, place%></td>
  <td class="edit_and_delete_links">
    <% if user_signed_in? and (place.user == current_user or current_user.admin?) %>
      <%= link_to image_tag("edit.png"), edit_place_path(place) %>
      <%= link_to image_tag("remove.png"), place, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </td>
</tr>

