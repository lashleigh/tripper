<% comment = reply_form-%>
<%= form_for Comment.new, :remote => true do |f| %>
  <div class="field">
    <%= f.text_area :content, :rows => '10' %>
  </div>
  <div class="field" style="display:hidden;">
    <%= f.hidden_field :commentable_id, :value => comment.id %>
    <%= f.hidden_field :commentable_type, :value => "Comment" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

