<% place = place_form-%>
<%= form_for Comment.new, :remote => true do |f| %>
    <%= f.text_area :content, :rows => '10' %>
  <div class="field" style="display:hidden;">
    <%= f.hidden_field :commentable_id, :value => place.id %>
    <%= f.hidden_field :commentable_type, :value => "Place" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

