<div class="block">
  <h2>Sign Up</h2>
</div>
<div class="flush">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
        <span class="hint quiet">Used as your username throughout the site</span>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
        <span class="hint quiet">Where we can contact you (no spam), and the password reset address</span>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :confirm_password %>
        <%= f.password_field :password_confirmation %>
      </div>
    </fieldset>

    <fieldset class="buttons">
      <%= f.submit "Sign up" %>
    </fieldset>

  <% end %>
</div>
